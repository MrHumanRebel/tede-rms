{% set THISWIDGET = WIDGETS.widget('inventoryTotal', {'instanceid': USERDATA.instance.instances_id}) %}

{% if "ASSETS:ASSET_TYPES:EDIT"|instancePermissions %}
    <div class="card statsWidget" data-widgetname="inventoryTotal">
        <div class="card-header">
            <h3 class="card-title" style="font-weight:bold;">Eszköz statisztika</h3>
            <div class="card-tools">
                {% if WIDGETS.checkUser('inventoryTotal') %}
                    <button type="button" class="btn btn-sm btn-tool removeWidgetButton" data-card-widget="collapse" data-widgetname="inventoryTotal" title="Eltávolítás a vezérlőpultról">
                        <i class="fas fa-times"></i>
                    </button>
                {% else %}
                    <button type="button" class="btn btn-sm btn-tool addWidgetButton" data-widgetname="inventoryTotal" title="Hozzáadás a vezérlőpulthoz">
                        <i class="fas fa-plus"></i>
                    </button>
                {% endif %}
            </div>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-0">
                <p class="text-left">
                    <i class="ion ion-android-arrow-up text-warning"></i> Összes eszköz értéke: {{ THISWIDGET.VALUE|money(USERDATA.instance['instances_config_currency'])|replace({',00':''}) }}
                </p>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-0">
                <p class="text-left">
                    <i class="ion ion-android-arrow-up text-warning"></i> Összes eszköz tömege: {{ THISWIDGET.MASS|round(2, 'ceil')|number_format(2) }} kg
                </p>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-0">
                <p class="text-left">
                    <i class="ion ion-android-arrow-up text-warning"></i> Összes raktárban lévő eszköz: {{ THISWIDGET.COUNT | default(0) }} db
                </p>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-0">
                <p class="text-left">
                    <i class="ion ion-android-arrow-up text-warning"></i> Összes eszköz típus: {{ THISWIDGET.TYPES | default(0) }} db
                </p>
            </div>
        </div>
    </div>
{% endif %}
