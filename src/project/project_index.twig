            function changeProjectDeliverDates(start, end) {
                ajaxcall("projects/changeProjectDeliverDates.php", {"projects_id": "{{ project.projects_id }}","projects_dates_deliver_start":start,"projects_dates_deliver_end":end}, function (data) {
                    if (data.response.changed) {
                        location.reload();
                    } else {
                        var message = "A projekt dátumai nem módosíthatók, mivel az ehhez rendelt eszközök más projektekhez is rendelve vannak, amelyek ütköznek. <br/><br/> Szeretnéd automatikusan eltávolítani a következő eszközöket a projektről? Ez számlázási következményekkel járhat.<br/><br/><br/><table class='table table-bordered'><tr><th>Címke</th><th>Név</th><th>Ütköző Projekt</th></tr>";
                        $.each(data.response.assets, function( index, value ) {
                            message += "<tr><td>" + value['assets_tag'] + "</td><td>" + value['assetTypes_name'] + "</td><td>" + value['projects_name'] + "</td></tr>";
                        });
                        bootbox.confirm({
                            message: message + "</table>",
                            buttons: {
                                cancel: {
                                    label: 'Nem - dátum módosításának visszavonása',
                                    className: 'btn-success'
                                },
                                confirm: {
                                    label: 'Igen',
